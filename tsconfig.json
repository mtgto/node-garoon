{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "sourceRoot": "lib",
        "declaration": true
    },
    "include": [
        "strong-soap.d.ts",
        "socks5-https-client.d.ts",
        "lib/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
