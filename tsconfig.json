{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "inlineSourceMap": true,
        "sourceRoot": "lib",
        "declaration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true
    },
    "include": ["strong-soap.d.ts", "lib/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "testAuth.json"]
}
